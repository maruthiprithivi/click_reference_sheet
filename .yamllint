extends: default

rules:
  line-length:
    max: 120
    level: warning
  document-start: disable
  truthy:
    check-keys: false
  comments:
    min-spaces-from-content: 1 # Require at least one space before comments
    require-starting-space: true
    level: warning

ignore: |
  .git/
  venv/
  site/
